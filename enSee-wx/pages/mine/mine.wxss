page {
    font-size: 14px;
    background: #000000;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    
}

.container-row {
    display: flex;
    flex-direction: row;
    margin-bottom: 10px;
    margin-top: 10px;
    color: whitesmoke;
}

.info-items {
    margin-left: 30px;
}

.first {
    margin-left: 0px;
}

.face {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    margin-top: 20px;
}

.nickname {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-weight: bold;
    font-size: 18px;
}

.logout {
    margin-top: 3px;
    float: right;
}

.follow {
    margin-top: 3px;
}

.line {
    width: 100%;
    height: 1px;
    background-color: gainsboro;
    margin-top: 1px;
}

.container-video {
    display: flex;
    flex-direction: row;
    text-align: center;
    
    line-height: 30px;
}
.mineBut{
  display: flex;
  width: 60%;
  flex-direction: row;
  justify-content: space-between;
}
.video-info {
    width: 100%;
    color: rgba(128,138,135,.5);
    border-bottom: solid 2px;
    border-color: #363636;
}

.video-info-selected {
    color: white;
    border-bottom: solid 2px;
    border-color: orange;
} 

.container-video-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.videoImage {
    width: 250rpx;
    height: 180px;
}
